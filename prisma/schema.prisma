generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  email     String     @unique
  password  String
  role      Int        @default(1)
  name      String?
  Cpf       String?
  phone     String?
  terms     Boolean?   @default(true)
  purchases Purchase[]
}

model Purchase {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  date      DateTime? @default(now())
  Date      Date      @relation(fields: [dateId], references: [id])
  dateId    String    @db.ObjectId
  User      User      @relation(fields: [userId], references: [id])
  userId    String    @db.ObjectId
  createdAt DateTime  @default(now())
}

model Date {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  dateStart  DateTime
  dateEnd    DateTime
  user       Json[]
  status     Int        @default(1)
  totalPrice Float
  Purchase   Purchase[]
}

model HomePrice {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  price       Float
  observation String?
}

model Pictures {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  picture     String
  observation String?
}
